<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="demo.controller.HelloPanel">
    <Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <Button icon="sap-icon://world" id="helloDialogButton" text="{i18n>openDialogButtonText}" press=".onOpenDialog" class="sapUiSmallMarginEnd"></Button>
            <Button  text="{i18n>showHelloButtonText}" press=".onShowHello" class="myCustomButton"></Button>
            <Input value="{/recipient/name}" valueLiveUpdate="true" width="60%"></Input>
            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin"></Text>
        </content>
    </Panel>
</mvc:View>